<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SingUpStudentActivity">

    <TextView
        android:id="@+id/signup_textView_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:text="sign_up"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_textInputLayout_student_sign_up"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="@color/black"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/person"
        android:hint="name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_textView_student">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText_name_student_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutRoll_student_sign_up"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:textColorHint="@color/black"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/roll"
        android:hint="roll"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayoutYear_student_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_textInputLayout_student_sign_up">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText_roll_student_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutYear_student_sign_up"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="@color/black"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/year"
        android:hint="semester"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textInputLayoutRoll_student_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/name_textInputLayout_student_sign_up">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText_sem_student_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutDepartment_student_sign_up"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="@color/black"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/department"
        android:hint="department"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutRoll_student_sign_up">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText_dept_student_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutEmail_student_sign_up"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="@color/black"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/email"
        android:hint="email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutDepartment_student_sign_up">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextEmail_student_sign_up"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPassword_student_sign_up"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="@color/black"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/lock"
        android:hint="password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutEmail_student_sign_up">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextPassword_student_sign_up"
            android:inputType="textWebPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_student_sign_up"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetLeft="0dp"
        android:insetBottom="0dp"
        android:text="sign up"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#00BCD4"
        app:elevation="0dp"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPassword_student_sign_up" />

    <Button
        android:id="@+id/a_h_a_a_button_student_sign_up"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetLeft="0dp"
        android:insetBottom="0dp"
        android:text="already have an account sign in"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="#00BCD4"
        app:elevation="0dp"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_student_sign_up" />


</androidx.constraintlayout.widget.ConstraintLayout>